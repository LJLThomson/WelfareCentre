<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/new_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_menu_item_boutique"
            android:gravity="center"
            android:onClick="onClick"
            android:text="新品"/>
        <RadioButton
            android:id="@+id/boutique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_menu_item_cart"
            android:gravity="center"
            android:onClick="onClick"
            android:text="精品"/>
        <RadioButton
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_menu_item_category"
            android:gravity="center"
            android:onClick="onClick"
            android:text="收藏"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_hint"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="10"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#000"
                android:textSize="10sp" android:id="@+id/textView"/>
            <RadioButton
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/selector_menu_item_new_good"
                android:onClick="onClick"
                android:text="购物车" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"/>
        </RelativeLayout>

        <RadioButton
            android:id="@+id/personCentre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_menu_item_personal_center"
            android:gravity="center"
            android:onClick="onClick"
            android:text="个人中心"/>
    </LinearLayout>
</LinearLayout>
