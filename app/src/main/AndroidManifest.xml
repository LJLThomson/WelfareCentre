<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.ucai.welfarecentre">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.FuLiCentreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".controller.activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.MainActivity"/>
        <activity android:name=".controller.activity.BoutiqueActivity"/>
        <activity android:name=".controller.activity.GoodsDetailsAcitivity"/>
        <activity android:name=".controller.activity.CatagoryActivity"/>
        <activity android:name=".controller.activity.LoginActivity"/>
        <activity android:name=".controller.activity.RegisterActivity"/>
        <activity android:name=".controller.activity.PersonalActivity"/>
        <activity android:name=".controller.activity.SettingsActivity"/>
    </application>
</manifest>